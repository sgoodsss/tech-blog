{{!-- Homepage View --}}
<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">

  <div class="col-md-3">
    <h2>
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    {{!-- This is not working --}}
    <p>Shared by {{user.firstName}} {{user.lastName}}</p>
  </div>

  <div class="col-md-9">
    <p>
      {{post.body}}
    </p>
  </div>

</div>
{{/each}}