  <h2>{{title}}</h2>
  <h3>Shared by {{user.firstName}} {{user.lastName}}</h3>
  <p>{{body}}</p>

  {{!-- Add Comments for the Selected Post --}}
  {{#each comments as |comment| }}
  <div class="row mb-4 comment">

    <div class="col-md-5">
      {{!-- This is not working --}}
      <p>Shared by {{user.firstName}} {{user.lastName}}</p>
    </div>

    <div class="col-md-7">
      <p>
        {{comment.body}}
      </p>
    </div>

  </div>
  {{/each}}

  <p>
    <a href="/profile">Back to Profile!</a>
    <a href="/">Back to Homepage!</a>
  </p>

</div>