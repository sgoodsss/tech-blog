{{!-- Selected Post --}}
<div class="text-center">
  <h2>{{title}}</h2>
  <h3>Shared by {{user.firstName}} {{user.lastName}}</h3>
  <p>{{body}}</p>

  {{!-- Add Comments for the Selected Post --}}
  {{!-- NOT WORKING--}}
  {{#each Comments as |comment| }}
  <div class="row mb-4 comment">

    <div class="col-md-5">
      <p>Shared by {{comment.user.firstName}} {{comment.user.lastName}}</p>
    </div>

    <div class="col-md-7">
      <p>
        {{comment.body}}
      </p>
    </div>

  </div>
  {{/each}}

  <div class="col-md-6">
    <h2>Write a New Comment!</h2>
    <form class="form comment-form">
      <div class="form-group">
        <label for="comment-body">What would you like to say?</label>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Post</button>
      </div>
    </form>
  </div>
</div>

  <p>
    <a href="/profile">Back to Profile!</a>
    <a href="/">Back to Homepage!</a>
  </p>

</div>

<script src="/js/post.js"></script>